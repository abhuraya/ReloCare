<div class="row d-flex justify-content-center mt-5">
        <div class="col-lg-6 col-mb-12">
        <div class="card bg-success">
            <div class="card-body">
                <h5 class="card-title text-center text-light mb-3">New Post</h5>
                <form class="form new-post"  id="new-post">
                    <div class="form-group text-light">
                        <label for="new-post-title">Post Title</label>
                        <input type="text" class="form-control" id="new-post-title" placeholder="Post Title">
                    </div>
                    <div class="form-group text-light mt-2">
                        <label for="new-post-content">Post Content</label>
                        <textarea class="form-control" id="new-post-content" rows="3" placeholder="Type your post here"></textarea>
                    </div>
                    <div class="input-group mt-2 mb-2">
                        <select class="custom-select text-success" id="state-choice">
                            <option selected>Choose State</option>
                            <option value="ma">MA</option>
                            <option value="nh">NH</option>
                            <option value="vt">VT</option>
                        </select>
                    </div>
                    <div class="input-group mt-2 mb-2">
                        <select class="custom-select text-success" id="category-choice">
                            <option selected>Choose Category</option>
                            <option value="transport">Transport</option>
                            <option value="legal">Legal</option>
                            <option value="food">Food</option>
                            <option value="health">Healthcare</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-light text-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="./js/newPost.js"></script>